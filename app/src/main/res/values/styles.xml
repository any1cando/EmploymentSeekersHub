<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    </style>

    <!-- Стиль для EditText -->
    <style name="AuthEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/auth_edit_text_style</item>
        <item name="android:textColor">@color/mainBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Стиль для Button -->
    <style name="BlueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item> <!-- Задаем ширину -->
        <item name="android:layout_height">60dp</item> <!-- Задаем высоту -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mainWhite</item>
        <item name="android:textSize">18sp</item>
        <!-- <item name="android:fontFamily"></item>  ДОБАВИТЬ ШРИФТ ДЛЯ КНОПКИ -->
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/blueActive</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShape</item>
        <!-- Другие параметры стиля, если нужно -->
    </style>

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <!-- Стиль для TextView (registration/auth) -->
    <style name="AuthTextViewStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/mainBlack</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Стиль для SearchView (main) -->
    <style name="CustomSearchViewStyleMain" parent="Widget.AppCompat.SearchView">
        <!-- Фон для поля ввода -->
        <item name="queryBackground">@color/blueActive</item>

        <!-- Фон для всего SearchView -->
        <item name="backgroundColor">@color/mainWhite</item>

        <!-- Иконка поиска -->
        <item name="searchIcon">@drawable/search_button</item>

        <!-- Иконка закрытия -->
<!--        <item name="closeIcon">@drawable/ic_close_custom</item>-->

        <!-- Цвет текста подсказки -->
        <item name="queryHint">@string/search_const</item>

        <!-- Цвет текста ввода -->
        <item name="android:textColor">@color/mainBlack</item>

        <!-- Цвет текста подсказки -->
        <item name="android:textColorHint">@color/gray</item>

        <!-- Шрифт для текста -->
<!--        <item name="android:fontFamily">@font/???</item>-->
    </style>

</resources>